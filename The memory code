// Introduce the game, name + rules
// Ask player if they are playing alone or with another person
// Generate random positions and assign a number to them (two positions per number)
// Draw the board of question marks as memory cards (and values get assigned to each question mark, this is not shown to the player)
//Loop starts, if one player then start timer
// Let the player navigate the cards
// Player gets to choose two cards and then they are shown what their values are and if they are the same player get 1 points and remove the values from the game, if not make them back into question marks
// If there are two players the other player is now playing
// Loop ends when all values are gone
//The player with the most points wins the game, stopping timer for one player so they can try and beat their own time.



Console.WriteLine("Welcome to Memory!\n" +
    "Memory is a game where you pick 2 cards, and if they are the same, you get a point!\n" +
    "Navigate the cards using the arrow keys and press Enter to select them.\n" +
    "If you play alone, try to beat your PR! If you play with a friend, kick their ass!");

//Variables 
bool mainMenu = true;
bool multiPlayer = false;
bool isRunning = false;

char space = ' ';

int moveInMenu = 0;

string[] options = { "Singleplayer", "Multiplayer" };


Console.WriteLine(space);
for (int i = 0; i < options.Length; i++)
{
    if (i == 0)
    {
        Console.ForegroundColor = ConsoleColor.Yellow;
    }
    else
    {
        Console.ForegroundColor = ConsoleColor.White;
    }

        Console.Write($"{options[i]}\t");
}


while (mainMenu)
{
    ConsoleKey consoleKey = Console.ReadKey(true).Key;

    if (consoleKey == ConsoleKey.A || consoleKey == ConsoleKey.LeftArrow)
    {
        moveInMenu--;
    }
    else if (consoleKey == ConsoleKey.D || consoleKey == ConsoleKey.RightArrow)
    {
        moveInMenu++;
    }

    if (moveInMenu < 0)
    {
        moveInMenu = options.Length-1;
    }
    else if (moveInMenu > 1)
    {
        moveInMenu = 0;
    }

    if (consoleKey == ConsoleKey.Enter && moveInMenu == 0)
    {
        multiPlayer = false;
        mainMenu = !mainMenu;
        isRunning = true;
        break;
    }
    else if (consoleKey == ConsoleKey.Enter && moveInMenu == 1)
    {
        multiPlayer = true;
        mainMenu = !mainMenu;
        isRunning = true;
        break;
    }

    switch (moveInMenu)
    {
        case 0:
            Console.Clear();
            Console.ForegroundColor = ConsoleColor.Yellow;
            Console.Write($"{options[0]}\t");
            Console.ForegroundColor = ConsoleColor.White;
            Console.WriteLine(options[1]);
            break;
        case 1:
            Console.Clear();
            Console.ForegroundColor = ConsoleColor.White;
            Console.Write($"{options[0]}\t");
            Console.ForegroundColor = ConsoleColor.Yellow;
            Console.Write(options[1]);
            break;
    }
}

DateTime now = DateTime.Now;


while (isRunning)
{
    Console.Clear();
    for (int i = 0; i < 20; i++)
    {
        Console.Write("? \t");
        if (i == 4 || i == 9 || i == 14)
        {
            Console.WriteLine(space);
        }
    }
    ConsoleKey moveAndPcikInator = Console.ReadKey(true).Key;

    if (multiPlayer)
    {
        
    }
    else if (!multiPlayer)
    {
        
    }
}

TimeSpan elapsed = DateTime.Now - now;

if (!multiPlayer)
{
    Console.WriteLine(elapsed.TotalSeconds);
}
